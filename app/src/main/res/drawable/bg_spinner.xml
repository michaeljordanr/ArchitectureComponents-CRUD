<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <layer-list>
            <item
                android:bottom="1dp"
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#80909c"/>
                </shape>
            </item>
            <item >
                <bitmap
                    android:gravity="right" android:src="@android:drawable/alert_dark_frame" />
            </item>
        </layer-list>
    </item>
</selector>